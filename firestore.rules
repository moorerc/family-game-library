rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Households collection
    match /households/{householdId} {
      // Allow read for all authenticated users (family can see all households)
      allow read: if isAuthenticated();

      // Allow create with validation
      allow create: if isAuthenticated()
        && request.resource.data.name is string
        && request.resource.data.name.size() > 0
        && request.resource.data.name.size() <= 100
        && request.resource.data.createdBy == request.auth.uid
        && request.auth.uid in request.resource.data.members;

      // Allow update/delete if user is a member
      allow update, delete: if isAuthenticated() &&
        request.auth.uid in resource.data.members;
    }

    // Games collection
    match /games/{gameId} {
      // Allow read for all authenticated users (shared library)
      allow read: if isAuthenticated();

      // Allow create with validation
      allow create: if isAuthenticated()
        && request.resource.data.name is string
        && request.resource.data.name.size() > 0
        && request.resource.data.name.size() <= 200
        && request.resource.data.addedBy == request.auth.uid
        && request.resource.data.minPlayers is int
        && request.resource.data.maxPlayers is int;

      // Allow update/delete if user added the game
      allow update, delete: if isOwner(resource.data.addedBy);
    }

    // Users collection for user profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId)
        && request.resource.data.email is string
        && request.resource.data.displayName is string;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent user deletion
    }
  }
}
